<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/bookCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/card_constraintColor"
        app:cardCornerRadius="7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtVBookName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="10dp"
                android:text="Book Name"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/lblPoint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblPoint"
                android:layout_width="79dp"
                android:layout_height="30dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:text="Point : "
                android:textSize="19dp"
                app:layout_constraintEnd_toStartOf="@+id/txtVPointValue"
                app:layout_constraintStart_toEndOf="@+id/txtVBookName"
                app:layout_constraintTop_toBottomOf="@+id/lblVTotalReadValue" />

            <TextView
                android:id="@+id/txtVPointValue"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:text="5.0"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblPoint"
                app:layout_constraintTop_toBottomOf="@+id/txtVTotalReadValue" />

            <TextView
                android:id="@+id/txtVTotalReadValue"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="40dp"
                android:text="125"
                android:textSize="19dp"
                app:layout_constraintBottom_toTopOf="@+id/txtVPointValue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lblVTotalReadValue"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblVTotalReadValue"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="11dp"
                android:text="Total Read :"
                android:textSize="19dp"
                app:layout_constraintBottom_toTopOf="@+id/lblPoint"
                app:layout_constraintEnd_toStartOf="@+id/txtVTotalReadValue"
                app:layout_constraintStart_toEndOf="@+id/txtVBookName"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>